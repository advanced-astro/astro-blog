---
import HomeLink from './homeLink.astro'
import { Image } from 'astro:assets'
import Link from './link.astro'
---

<header>
  <HomeLink />
  <span>
    by
    <Link classList={["scale-100 active:scale-100"]} href="https://github.com/rdwz">
			<Image
        width="32"
        height="32"
        class="relative -top-1 mx-2 inline h-8 w-8 rounded-full"
        src="https://avatars.githubusercontent.com/u/8125196?v=4"
        alt="rdwz avatar"
      />
		</Link>
  </span>
</header>

<style>
  header {
    margin-bottom: 1.75rem;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
  }

	span {
		position: relative;
		top: 4px;
		font-style: italic;
	}
</style>
